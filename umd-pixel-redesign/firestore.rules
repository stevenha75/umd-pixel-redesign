rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['firstName', 'lastName']));
    }

    // Events collection
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();

      // Excused Absences Subcollection
      match /excused_absences/{absenceId} {
        allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update: if isAdmin(); // Only admins can approve/reject
        allow delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      }
    }

    // Semesters collection
    match /semesters/{semesterId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
